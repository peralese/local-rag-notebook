# Ollama endpoint (used when --endpoint is not passed)
OLLAMA_HOST=http://localhost:11434

# HTTP client timeouts (seconds)
OLLAMA_CONNECT_TIMEOUT=10
OLLAMA_READ_TIMEOUT=600

# Cap generation length when caller doesn't set max_tokens
OLLAMA_NUM_PREDICT=512

# Logging default (INFO, DEBUG, WARNING, etc.)
LOG_LEVEL=INFO
